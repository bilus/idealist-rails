= form_for @idea do |f|
  %fieldset
    = f.error_messages
    = f.label :title
    = f.text_field :title, class: "span6"
    = f.label :description
    = f.text_area :description, class: "span6"
    = f.label :address
    = f.text_field :address, class: "span6"

    = f.label :image, "Dodaj plik ze swojego komputera"
    = f.file_field :image
    
    = f.label :remote_image_url, "lub wpisz adres Internetowy"
    = f.text_field :remote_image_url
    / = f.label :latitude
    / = f.text_field :latitude
    / = f.label :longitude
    / = f.text_field :longitude
  %fieldset
    = f.submit class: 'btn btn-primary btn-large'
